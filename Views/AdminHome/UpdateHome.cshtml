@model Home
@{
    ViewData["Title"] = "Anasayfa Düzenle";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<!-- Anasayfa Bölümü -->
<section id="anasayfa" class="content-section">
    <div class="section-header">
        <h2><i class="fas fa-home"></i> Anasayfa Düzenle</h2>
    </div>
    <form id="homeForm" class="admin-form" method="post" action="/AdminHome/UpdateHome">
        <div class="form-group">
            <label for="homeName">İsim</label>
            <input type="text" name="NameSurname" id="homeName" placeholder="Adınız Soyadınız" value="@Model.NameSurname">
        </div>
        <div class="form-group">
            <label for="homeTitle">Ünvan</label>
            <input type="text" id="homeTitle" name="PositionName" placeholder="ÖRN. Web Geliştirici & Tasarımcı" value="@Model.PositionName">
        </div>
        <div class="form-group">
            <label for="homeTitle">Profil Resmi</label>
            <input type="text" id="homeImage" name="ImageUrl" placeholder="https://example.com/profile.jpg" value="@Model.ImageUrl">
        </div>
        <div class="form-actions">
            <button type="submit" class="btn primary">
                <i class="fas fa-save"></i> Kaydet
            </button>
        </div>
    </form>
</section> 