@model About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<!-- Hakkımda Bölümü -->
<section id="hakkimda" class="content-section">
    <div class="section-header">
        <h2><i class="fas fa-user"></i> Hakkımda Düzenle</h2>
    </div>
    <form id="aboutForm" class="admin-form" method="post">
        <div class="form-group">
            <label for="aboutText">Hakkımda Metni</label>
            <input type="text" id="aboutImage" placeholder="https://example.com/profile.jpg" value="@Model.Description">
        </div>
        <div class="form-group">
            <label for="homeTitle">Hakkımda Resmi</label>
            <input type="text" id="aboutImage" placeholder="https://example.com/profile.jpg" value="@Model.ImageUrl">
        </div>
        <div class="form-actions">
            <button type="submit" class="btn primary">
                <i class="fas fa-save"></i> Kaydet
            </button>
        </div>
    </form>
</section>
